@model IEnumerable<Karibu.Models.Commune>

@{
    ViewData["Title"] = "Index";
    ViewData["PageTitle"] = "Communes";
}

<p>
    <a asp-action="Create">Une nouvelle commune</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomCommune)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomCommune)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCommune">Modifier</a> |
                <a asp-action="Details" asp-route-id="@item.IdCommune">Détails</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCommune">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
