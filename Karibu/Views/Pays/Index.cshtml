@model IEnumerable<Karibu.Models.Pay>

@{
    ViewData["Title"] = "Pays";
    ViewData["PageTitle"] = ViewData["Title"];
}

<p>
    <a asp-action="Create">Ajouter un Pays</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomPays)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomPays)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPays">Modifier</a> |
                <a asp-action="Details" asp-route-id="@item.IdPays">Détails</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPays">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
