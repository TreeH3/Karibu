@model Karibu.Models.Pay

@{
    ViewData["Title"] = "Supprimer | Pays";
    ViewData["PageTitle"] = ViewData["Title"];
}

<h3>Etes-vous sûr de vouloir supprimer ceci ?</h3>
<div>
    <h4>Pay</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomPays)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomPays)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPays" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour à la liste</a>
    </form>
</div>
